<h1>Iniciar sesión</h1>

<section>
  <form id='loginForm'>
    <label for='email'>Email</label>
    <input type='email' name='email' id='email' required />
    <label for='password'>Contraseña</label>
    <input type='password' name='password' id='password' required />
    <input type='submit' id='submit' />
    {{#if message}}
      <div class='error-container'>
        <ul class='error-list'>
          <li>{{message}}</li>
        </ul>
      </div>
    {{/if}}
  </form>
  <p class='register'>¿No estas registrado?
    <a class='link' href='/register'>Regístrate aquí</a>
  </p>
  <p class='register'>¿Olvidaste tu contraseña?
    <a class='link' href='/sendResetEmail'>Restáurala aquí</a>
  </p>
  <div class='githubContainer'>
    <a class='github' href='/api/sessions/github'>
      <button>
        <img src='/static/img/github.png' alt='github' />Ingresar con Github
      </button>
    </a>
  </div>
</section>

<script src='/static/js/login.js'></script>