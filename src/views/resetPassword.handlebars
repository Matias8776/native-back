<h1>Restaura tu contraseña</h1>

<section>
  <form id='resetPasswordForm'>
    <label for='password'>Nueva contraseña</label>
    <input type='password' name='password' id='password' required />
    <label for='comparePassword'>Repita contraseña</label>
    <input type='password' name='comparePassword' id='comparePassword' required />
    <input type='submit' id='submit' />
    <p id='error' style='color: red;'></p>
  </form>
</section>

<div data-email="{{email}}"></div>
<script src='/static/js/resetPassword.js'></script>